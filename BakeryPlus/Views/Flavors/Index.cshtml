@{
  Layout = "_Layout";
}

@using BakeryPlus.Models;

<div class="headerpadding"></div>

<h1>Flavors</h1>
<hr />

<h4>Flavors</h4>
@if (Model["flavors"].Length == 0)
{
  <p>No flavors have ben added yet!</p>
}
<ul>
  @foreach (Flavor flavor in Model["flavors"])
  {
    <li>@Html.ActionLink(@flavor.Description, "Details", "Flavors", new { id = @flavor.FlavorId})</li>
  }
</ul>

<p>@Html.ActionLink("See all Treats", "Index", "Treats")</p>
<p>@Html.ActionLink("See all Flavors", "Index", "Flavors")</p>